
<% flash.each do |name, msg| %>
<% if msg.is_a?(String) %>

<div style="margin-top:25px" class="alert alert-<%= name == 'notice' ? "success" : "warning" %>">
      <a class="close" data-dismiss="alert">&#215;</a>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>

<% end %>
<% end %>

