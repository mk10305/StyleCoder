    ['Bisque', 'Brown', 'Chocolate', 'GoldenRod', 'Maroon'],
    ['Tan', 'SaddleBrown', 'RosyBrown', 'Olive', 'Cornsilk'],
    ['Chartreuse', 'DarkGreen', 'Green', 'Lime', 'SpringGreen'],
    ['CadetBlue', 'Cyan', 'Teal', 'DeepSkyBlue', 'LightSkyBlue'],
    ['Blue', 'BlueViolet', 'CornflowerBlue', 'DodgerBlue', 'SteelBlue'],
    ['MidnightBlue', 'Navy', 'LightBlue', 'DarkOrchid', 'DarkMagenta'],
    ['Fuchsia', 'Lavender', 'MediumPurple', 'Plum', 'Purple'],
    ['Beige', 'Black', 'White', 'DarkGray', 'Silver']
    ]
  })

</script>

























