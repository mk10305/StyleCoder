
<%= form_for(@color) do |f| %>
<% if @color.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@color.errors.count, "error") %> prohibited this color from being saved:</h2>

  <ul>
    <% @color.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>




<div class="row">
  <div class="col-md-12">

   <div class="form-group">
    <h2>Choose a Color</h2>
    <input type='text' id="showPaletteOnly"/>
    <%= f.text_field :hex_code %>
  </div>


  <div class="form-group">


    <%= f.text_field :name, :class=>'form-control input-md'  %>

  </div>


</div>

<div class="form-group">
  <%= f.submit "Submit", class: 'btn btn-info' %>
</div>


<% end %>

</div>







<script>



$("#showPaletteOnly").spectrum({
  showPaletteOnly: true,
  showPalette:true,
  hideAfterPaletteSelect:true,
  color: " <%= @color.name|| 'black' %>",                                        
  change: function(color){ 
    $("#color_name").val(color.toName()); 
    $("#color_hex_code").val(color.toHex());  },
    palette: [
