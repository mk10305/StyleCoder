
<!-- Navigation -->
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <% if !logged_in? %> 

        <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Sign Up', register_path , 'data-no-turbolink'=>true %></li>
        </ul> 

        <%end%> 

    </div>
</nav>

<div class="container heading_container">
    <div class="row">
        <%= render 'layouts/messages' %>
        <h1 class="page_heading"> Style Coder </h1>
        <div class="col-md-4 col-md-offset-4">



            <%= form_tag '/login' do %>
            <div class="form-group">
                <%=text_field_tag :username , 'Enter Username', :class=>"form-control"  %>
            </div>
            <div class="form-group">
                <%=password_field_tag :password, 'Enter Password', :class=>"form-control"  %>
            </div>

            <%= submit_tag 'Log In', class: 'btn btn-lg btn-info btn-block' %>


            <% end %> 








        </div>
    </div>
</div> <!-- /container -->




